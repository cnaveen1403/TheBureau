<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bureau.bureauapp.fragments.GoldStoreFragment"
    tools:ignore="MissingPrefix">

    <com.bureau.bureauapp.adapters.ConversationsRecyclerView
        android:id="@+id/conversations_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/screen_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dimens_eight_dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/goldAmountTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="3200"
                    android:textSize="30sp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/img_gold_invite" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView4"
                fontPath="fonts/Comfortaa-Regular.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="By Match Making Credits"
                android:textSize="@dimen/bureau_title_text_size" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:id="@+id/leaseGoldLL1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/img_btn_goldstore"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/goldText1TV"
                            fontPath="fonts/Comfortaa-Regular.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="140"
                            android:textColor="@color/white"
                            android:textSize="@dimen/bureau_regular_text_size" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="3dp"
                            android:src="@drawable/img_gold_invite" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/goldPercentage1TV"
                        fontPath="fonts/Comfortaa-Regular.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="\u20B9 160"
                        android:textSize="@dimen/bureau_regular_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/leaseGoldLL2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/img_btn_goldstore"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/goldText2TV"
                            fontPath="fonts/Comfortaa-Regular.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="380"
                            android:textColor="@color/white"
                            android:textSize="@dimen/bureau_regular_text_size" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="3dp"
                            android:src="@drawable/img_gold_invite" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/goldPercentage2TV"
                        fontPath="fonts/Comfortaa-Regular.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="\u20B9 400"
                        android:textSize="@dimen/bureau_regular_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/leaseGoldLL3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/img_btn_goldstore"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/goldText3TV"
                            fontPath="fonts/Comfortaa-Regular.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="1000"
                            android:textColor="@color/white"
                            android:textSize="@dimen/bureau_regular_text_size" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="3dp"
                            android:src="@drawable/img_gold_invite" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/goldPercentage3TV"
                        fontPath="fonts/Comfortaa-Regular.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="\u20B9 800"
                        android:textSize="@dimen/bureau_regular_text_size" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_referral_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    fontPath="fonts/Comfortaa-Regular.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimens_eight_dp"
                    android:text="Do you have referral code ?"
                    android:textSize="@dimen/bureau_title_text_size" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <EditText
                        android:id="@+id/referralCodeET"
                        fontPath="fonts/Comfortaa-Regular.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/submitBTN"
                        android:layout_weight="1"
                        android:background="@drawable/edit_text_background"
                        android:drawablePadding="10dp"
                        android:focusableInTouchMode="true"
                        android:hint="Referral Code Here"
                        android:inputType="text"
                        android:paddingBottom="4dp"
                        android:paddingLeft="7dp"
                        android:singleLine="true"
                        android:textSize="@dimen/bureau_regular_text_size" />

                    <Button
                        android:id="@+id/submitBTN"
                        fontPath="fonts/Comfortaa-Regular.ttf"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/btn_red"
                        android:text="Submit"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/bureau_title_text_size" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                fontPath="fonts/Comfortaa-Regular.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimens_eight_dp"
                android:text="Free Match Making Credits"
                android:textSize="@dimen/bureau_title_text_size" />

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/invite_friend_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true">

                <RelativeLayout
                    android:id="@+id/inviteFriendsRL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/img_invite_friend" />

                    <TextView
                        fontPath="fonts/Comfortaa-Regular.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="Invite a Friend"
                        android:textSize="@dimen/bureau_regular_text_size" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/facebook_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true">

                <com.facebook.share.widget.LikeView
                    android:id="@+id/fbLikeView"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:padding="10dp" />

                <RelativeLayout
                    android:id="@+id/likeUsOnFacebookRL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/img_fb_like" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="Like us on FaceBook"
                        android:textSize="@dimen/bureau_regular_text_size" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/instagram_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true">

                <RelativeLayout
                    android:id="@+id/followUsOnInstagramRL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/img_follow_instagram" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="Follow us on Instagram"
                        android:textSize="@dimen/bureau_regular_text_size" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/tv_terms_and_cond"
                fontPath="fonts/Comfortaa-Regular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dimens_sixteen_dp"
                android:layout_marginLeft="@dimen/dimens_eight_dp"
                android:layout_marginRight="@dimen/dimens_eight_dp"
                android:layout_marginTop="@dimen/dimens_eight_dp"
                android:gravity="center"
                android:lineSpacingMultiplier="1.5"
                android:text=""
                android:textColorLink="@color/blue"
                android:textSize="@dimen/bureau_regular_text_size" />

        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/screen_wait"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="App loading image"
        android:src="@drawable/ic_loading_bg"
        android:visibility="gone" />

</LinearLayout>
