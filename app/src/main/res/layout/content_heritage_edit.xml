<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".profileedit.HeritageEdit"
    tools:showIn="@layout/activity_heritage_edit"
    tools:ignore="MissingPrefix">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_religion_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/bureau_regular_text_size"
                    android:textColor="@color/colorAccent"
                    fontPath="fonts/Comfortaa-Regular.ttf" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:text="@string/txtColon"
                    android:textSize="@dimen/bureau_regular_text_size"
                    android:layout_gravity="center" />

                <EditText
                    android:id="@+id/et_religion_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:hint="@string/txt_select_item"
                    android:background="@drawable/border_bottom"
                    android:drawableRight="@drawable/ic_dropdown_arrow"
                    android:paddingLeft="5dp"
                    android:inputType="none"
                    android:editable="false"
                    android:focusable="false"
                    android:textSize="@dimen/bureau_regular_text_size"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dimens_sixteen_dp">

                <TextView
                    android:id="@+id/tv_mother_toungue_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:textSize="@dimen/bureau_regular_text_size"
                    android:layout_gravity="center_vertical"
                    fontPath="fonts/Comfortaa-Regular.ttf" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:text="@string/txtColon"
                    android:textSize="@dimen/bureau_regular_text_size"
                    android:layout_gravity="center_vertical" />

                <EditText
                    android:id="@+id/et_mother_toungue_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:hint="@string/txt_select_item"
                    android:background="@drawable/border_bottom"
                    android:drawableRight="@drawable/ic_dropdown_arrow"
                    android:inputType="none"
                    android:paddingLeft="5dp"
                    android:editable="false"
                    android:focusable="false"
                    android:textSize="@dimen/bureau_regular_text_size"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dimens_sixteen_dp">

                <TextView
                    android:id="@+id/tv_family_origin_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/bureau_regular_text_size"
                    fontPath="fonts/Comfortaa-Regular.ttf" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:text="@string/txtColon"
                    android:textSize="@dimen/bureau_regular_text_size"
                    android:layout_gravity="center_vertical" />

                <EditText
                    android:id="@+id/et_family_origin_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:hint="@string/txt_select_item"
                    android:background="@drawable/border_bottom"
                    android:paddingLeft="5dp"
                    android:drawableRight="@drawable/ic_dropdown_arrow"
                    android:inputType="none"
                    android:editable="false"
                    android:focusable="false"
                    android:singleLine="true"
                    android:textSize="@dimen/bureau_regular_text_size"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dimens_sixteen_dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="@string/txtSpecification"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/bureau_regular_text_size"
                    fontPath="fonts/Comfortaa-Regular.ttf" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.10"
                    android:text="@string/txtColon"
                    android:textSize="@dimen/bureau_regular_text_size"
                    android:layout_gravity="center_vertical" />

                <EditText
                    android:id="@+id/et_specification_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:hint="@string/txt_select_item"
                    android:background="@drawable/border_bottom"
                    android:drawableRight="@drawable/ic_dropdown_arrow"
                    android:paddingLeft="5dp"
                    android:inputType="none"
                    android:textSize="@dimen/bureau_regular_text_size"
                    android:editable="false"
                    android:focusable="false"
                    android:singleLine="true"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dimens_sixteen_dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="@string/txtGothra"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/bureau_regular_text_size"
                    fontPath="fonts/Comfortaa-Regular.ttf" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:text="@string/txtColon"
                    android:textSize="@dimen/bureau_regular_text_size"
                    android:layout_gravity="center_vertical" />

                <EditText
                    android:id="@+id/et_gothra_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:paddingLeft="5dp"
                    android:hint="Please enter gothra"
                    android:textSize="@dimen/bureau_regular_text_size"
                    android:background="@drawable/border_bottom"
                    android:singleLine="true"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
