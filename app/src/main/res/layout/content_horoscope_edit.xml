<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".profileedit.HoroscopeEdit"
    tools:showIn="@layout/activity_horoscope_edit"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/dimens_eight_dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:text="@string/txtProfileDOB"
                android:textSize="@dimen/bureau_regular_text_size"
                fontPath="fonts/Comfortaa-Regular.ttf" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:text="@string/txtColon"
                android:textSize="@dimen/bureau_regular_text_size"
                fontPath="fonts/Comfortaa-Regular.ttf" />

            <EditText
                android:id="@+id/et_horoscope_dob_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border_bottom"
                android:paddingLeft="5dp"
                android:drawablePadding="10dp"
                android:paddingBottom="4dp"
                android:singleLine="true"
                android:focusable="false"
                android:textSize="@dimen/bureau_regular_text_size"
                fontPath="fonts/Comfortaa-Regular.ttf" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dimens_eight_dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:text="@string/txtTimeOfBirth"
                android:textSize="@dimen/bureau_regular_text_size"
                fontPath="fonts/Comfortaa-Regular.ttf" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:text="@string/txtColon"
                android:textSize="@dimen/bureau_regular_text_size"
                fontPath="fonts/Comfortaa-Regular.ttf" />

            <EditText
                android:id="@+id/et_horoscope_tob_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:focusable="false"
                android:background="@drawable/border_bottom"
                android:drawablePadding="10dp"
                android:paddingBottom="4dp"
                android:singleLine="true"
                android:textSize="@dimen/bureau_regular_text_size"
                fontPath="fonts/Comfortaa-Regular.ttf" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dimens_eight_dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:text="@string/txtBirthLocation"
                android:textSize="@dimen/bureau_regular_text_size"
                fontPath="fonts/Comfortaa-Regular.ttf" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:text="@string/txtColon"
                android:textSize="@dimen/bureau_regular_text_size"
                fontPath="fonts/Comfortaa-Regular.ttf" />

            <EditText
                android:id="@+id/et_horoscope_lob_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/border_bottom"
                android:drawablePadding="10dp"
                android:paddingBottom="4dp"
                android:singleLine="true"
                android:textSize="@dimen/bureau_regular_text_size"
                fontPath="fonts/Comfortaa-Regular.ttf" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/txtAbountMe"
            android:textSize="@dimen/bureau_title_text_size"
            android:layout_marginTop="@dimen/dimens_eight_dp"
            fontPath="fonts/Comfortaa-Bold.ttf" />

        <EditText
            android:id="@+id/et_aboutme_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="6"
            android:maxLength="250"
            android:gravity="top|left"
            android:inputType="textMultiLine"
            android:scrollHorizontally="false"
            android:paddingLeft="7dp"
            android:background="@drawable/edit_text_background"
            android:layout_marginTop="@dimen/dimens_eight_dp"
            android:textSize="@dimen/bureau_regular_text_size"
            fontPath="fonts/Comfortaa-Regular.ttf" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_horoscope_title"
            android:textSize="@dimen/bureau_title_text_size"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/dimens_sixteen_dp"
            fontPath="fonts/Comfortaa-Bold.ttf" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_text_background"
            android:layout_marginTop="@dimen/dimens_eight_dp">

            <ImageView
                android:id="@+id/iv_horoscope"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:padding="8dp" />

            <ImageView
                android:id="@+id/iv_add_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_add"
                android:layout_centerInParent="true" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
