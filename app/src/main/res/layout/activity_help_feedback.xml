<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingPrefix">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Help / Feedback"
            android:textSize="@dimen/bureau_title_text_size"
            android:textColor="@color/white"
            fontPath="fonts/Comfortaa-Regular.ttf" />

        <ImageView
            android:id="@+id/backIconIMG"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:padding="@dimen/dimens_sixteen_dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/back_icon" />

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:padding="@dimen/dimens_twelve_dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_logo_white" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/submitFeedbackBTN"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="72dp"
        android:layout_marginRight="@dimen/dimens_sixteen_dp"
        android:layout_marginLeft="@dimen/dimens_sixteen_dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Weâ€™d love to hear from you.  Please leave your questions, comments and concerns below:"
            fontPath="fonts/Comfortaa-Regular.ttf"
            android:textSize="@dimen/bureau_regular_text_size"
            android:lineSpacingMultiplier="1.5" />

        <EditText
            android:id="@+id/sendFeedBackMessageET"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/dimens_sixteen_dp"
            android:background="@drawable/edit_text_background"
            android:gravity="top"
            android:hint="Please provide your message here."
            android:inputType="textMultiLine"
            android:padding="10dp"
            fontPath="fonts/Comfortaa-Regular.ttf"
            android:textSize="@dimen/bureau_regular_text_size" />
    </LinearLayout>

    <Button
        android:id="@+id/submitFeedbackBTN"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimens_sixteen_dp"
        android:background="@drawable/btn_red"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="Submit Feedback"
        android:textAllCaps="false"
        android:textColor="@color/white"
        fontPath="fonts/Comfortaa-Regular.ttf"
        android:textSize="@dimen/bureau_title_text_size" />
</RelativeLayout>
