<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".profileedit.BasicInfoEdit"
    tools:showIn="@layout/activity_basic_edit"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimens_eight_dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:text="@string/txtFirstName"
            android:textSize="@dimen/bureau_regular_text_size"
            fontPath="fonts/Comfortaa-Regular.ttf" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:text="@string/txtColon"
            android:textSize="@dimen/bureau_regular_text_size"
            fontPath="fonts/Comfortaa-Regular.ttf" />

        <EditText
            android:id="@+id/et_first_name_edit"
            android:layout_width="0dp"
            android:paddingLeft="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textCapSentences"
            android:background="@drawable/border_bottom"
            android:drawablePadding="10dp"
            android:singleLine="true"
            android:textSize="@dimen/bureau_regular_text_size"
            fontPath="fonts/Comfortaa-Regular.ttf" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimens_sixteen_dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:text="@string/txtLastName"
            android:textSize="@dimen/bureau_regular_text_size"
            fontPath="fonts/Comfortaa-Regular.ttf" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:text="@string/txtColon"
            android:textSize="@dimen/bureau_regular_text_size"
            fontPath="fonts/Comfortaa-Regular.ttf" />

        <EditText
            android:id="@+id/et_last_name_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_weight="1"
            android:inputType="textCapSentences"
            android:background="@drawable/border_bottom"
            android:drawablePadding="10dp"
            android:singleLine="true"
            android:textSize="@dimen/bureau_regular_text_size"
            fontPath="fonts/Comfortaa-Regular.ttf" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimens_sixteen_dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:text="@string/txtProfileDOB"
            android:textSize="@dimen/bureau_regular_text_size"
            fontPath="fonts/Comfortaa-Regular.ttf" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:text="@string/txtColon"
            android:textSize="@dimen/bureau_regular_text_size"
            fontPath="fonts/Comfortaa-Regular.ttf" />

        <EditText
            android:id="@+id/et_dob_edit"
            android:layout_width="0dp"
            android:paddingLeft="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/border_bottom"
            android:drawablePadding="10dp"
            android:textSize="@dimen/bureau_regular_text_size"
            android:singleLine="true"
            fontPath="fonts/Comfortaa-Regular.ttf" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimens_sixteen_dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:layout_gravity="center"
            android:text="@string/txtGender"
            android:textSize="@dimen/bureau_regular_text_size"
            fontPath="fonts/Comfortaa-Regular.ttf" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:layout_gravity="center"
            android:text="@string/txtColon"
            android:textSize="@dimen/bureau_regular_text_size"
            fontPath="fonts/Comfortaa-Regular.ttf" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_female_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/img_female_black"
                android:layout_marginLeft="@dimen/dimens_eight_dp" />

            <ToggleButton
                android:id="@+id/tb_gender_edit"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginLeft="@dimen/dimens_eight_dp"
                android:background="@drawable/toggle_gender_selector"
                android:checked="false"
                android:text=""
                android:textOff=""
                android:textOn="" />

            <ImageView
                android:id="@+id/iv_male_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_male_red"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimens_eight_dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimens_sixteen_dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:text="@string/txtZipCode"
            android:textSize="@dimen/bureau_regular_text_size"
            fontPath="fonts/Comfortaa-Regular.ttf" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:text="@string/txtColon"
            android:textSize="@dimen/bureau_regular_text_size"
            fontPath="fonts/Comfortaa-Regular.ttf" />

        <EditText
            android:id="@+id/et_zip_code_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/border_bottom"
            android:drawablePadding="10dp"
            android:textSize="@dimen/bureau_regular_text_size"
            android:singleLine="true"
            fontPath="fonts/Comfortaa-Regular.ttf" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimens_sixteen_dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:text="@string/txtHeight"
            android:textSize="@dimen/bureau_regular_text_size"
            fontPath="fonts/Comfortaa-Regular.ttf" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:text="@string/txtColon"
            android:textSize="@dimen/bureau_regular_text_size"
            fontPath="fonts/Comfortaa-Regular.ttf" />

        <EditText
            android:id="@+id/et_height_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/border_bottom"
            android:drawablePadding="10dp"
            android:textSize="@dimen/bureau_regular_text_size"
            android:singleLine="true"
            fontPath="fonts/Comfortaa-Regular.ttf" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimens_sixteen_dp"
        android:layout_marginBottom="@dimen/dimens_sixteen_dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:text="@string/txtMartialStatus"
            android:textSize="@dimen/bureau_regular_text_size"
            fontPath="fonts/Comfortaa-Regular.ttf" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:text="@string/txtColon"
            android:textSize="@dimen/bureau_regular_text_size"
            android:textAppearance="?android:attr/textAppearanceMedium"

            fontPath="fonts/Comfortaa-Regular.ttf" />

        <RadioGroup
            android:id="@+id/rg_MaritialStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <RadioButton
                style="@style/RadioButton.RadioButton_Verticle_Checked"
                android:id="@+id/rd_NeverMarried"
                android:text="@string/txtNeverMarried"
                android:paddingLeft="5dp"
                android:gravity="center"
                android:textColor="@drawable/textcolor_selector_radio"
                fontPath="fonts/Comfortaa-Regular.ttf" />

            <RadioButton
                style="@style/RadioButton.RadioButton_Verticle_Unchecked"
                android:id="@+id/rd_Divorced"
                android:text="@string/txtDivorced"
                android:paddingLeft="5dp"
                android:gravity="center"
                android:textColor="@drawable/textcolor_selector_radio"
                fontPath="fonts/Comfortaa-Regular.ttf" />

            <RadioButton
                style="@style/RadioButton.RadioButton_Verticle_Unchecked"
                android:id="@+id/rd_Widowed"
                android:text="@string/txtWidowed"
                android:paddingLeft="5dp"
                android:gravity="center"
                android:textColor="@drawable/textcolor_selector_radio"
                fontPath="fonts/Comfortaa-Regular.ttf" />
        </RadioGroup>
    </LinearLayout>
</LinearLayout>


