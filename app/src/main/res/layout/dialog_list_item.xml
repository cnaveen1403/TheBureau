<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="@dimen/bureau_title_text_size"
        android:text=""
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/titleMsgTV"
        fontPath="fonts/Comfortaa-Regular.ttf" />

    <ImageView
        android:id="@+id/iv_close_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_bw"
        android:layout_toLeftOf="@+id/iv_close_image1"
        android:layout_marginTop="@dimen/dimens_eight_dp"
        android:layout_marginBottom="@dimen/dimens_eight_dp"
        android:layout_marginLeft="@dimen/dimens_eight_dp" />

    <ImageView
        android:id="@+id/iv_close_image1"
        android:layout_width="8dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="2dp" />


    <View
        android:layout_width="match_parent"
        android:layout_below="@+id/titleMsgTV"
        android:layout_height="0.5dp"
        android:background="@color/black" />

    <ListView
        android:id="@+id/listView_Heritage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleMsgTV"
        android:divider="@color/light_grey"
        android:layout_marginTop="2dp"
        android:dividerHeight="1sp" />

</RelativeLayout>
