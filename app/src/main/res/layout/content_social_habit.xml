<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.bureau.bureauapp.profilesetup.SocialHabit"
    tools:showIn="@layout/activity_social_habit"
    tools:ignore="MissingPrefix">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/txtDiet"
                    android:textSize="@dimen/bureau_regular_text_size"
                    fontPath="fonts/Comfortaa-Regular.ttf" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="@string/txtColon"
                    android:textSize="@dimen/bureau_regular_text_size" />

                <RadioGroup
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:id="@+id/radioGroup_Diet">

                    <RadioButton
                        style="@style/RadioButton.RadioButton_Verticle_Checked"
                        android:id="@+id/radio_Vegetarian"
                        android:text="@string/txtVegetarian"
                        android:paddingLeft="5dp"
                        android:onClick="onDietClicked"
                        android:textColor="@drawable/textcolor_selector_radio"
                        fontPath="fonts/Comfortaa-Regular.ttf"
                        android:textSize="@dimen/bureau_regular_text_size" />

                    <RadioButton
                        style="@style/RadioButton.RadioButton_Verticle_Unchecked"
                        android:id="@+id/radio_Eggetarian"
                        android:paddingLeft="5dp"
                        android:text="@string/txtEggetarian"
                        android:onClick="onDietClicked"
                        android:textColor="@drawable/textcolor_selector_radio"
                        fontPath="fonts/Comfortaa-Regular.ttf"
                        android:textSize="@dimen/bureau_regular_text_size" />

                    <RadioButton
                        style="@style/RadioButton.RadioButton_Verticle_Unchecked"
                        android:id="@+id/radio_NonVegetarian"
                        android:text="@string/txtNonVegetarian"
                        android:onClick="onDietClicked"
                        android:paddingLeft="5dp"
                        android:textColor="@drawable/textcolor_selector_radio"
                        fontPath="fonts/Comfortaa-Regular.ttf"
                        android:textSize="@dimen/bureau_regular_text_size" />

                    <RadioButton
                        style="@style/RadioButton.RadioButton_Verticle_Unchecked"
                        android:id="@+id/radio_Vegan"
                        android:text="@string/txtVegan"
                        android:onClick="onDietClicked"
                        android:paddingLeft="5dp"
                        android:textColor="@drawable/textcolor_selector_radio"
                        fontPath="fonts/Comfortaa-Regular.ttf"
                        android:textSize="@dimen/bureau_regular_text_size" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_gravity="center"
                    android:text="@string/txtDrinking"
                    android:textSize="@dimen/bureau_regular_text_size"
                    fontPath="fonts/Comfortaa-Regular.ttf" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center"
                    android:text="@string/txtColon"
                    android:textSize="@dimen/bureau_regular_text_size" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_Socially"
                        android:text="@string/txtSocially"
                        android:gravity="end"
                        fontPath="fonts/Comfortaa-Regular.ttf"
                        android:textSize="@dimen/bureau_regular_text_size" />

                    <ToggleButton
                        android:id="@+id/toggle_Drinking"
                        style="@style/ToggleButton"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginLeft="@dimen/dimens_eight_dp"
                        android:text=""
                        android:textOff=""
                        android:textOn="" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_Never"
                        android:text="@string/txtNever"
                        android:textColor="@color/light_grey"
                        fontPath="fonts/Comfortaa-Regular.ttf"
                        android:textSize="@dimen/bureau_regular_text_size" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_gravity="center"
                    android:text="@string/txtSmoking"
                    android:textSize="@dimen/bureau_regular_text_size"
                    fontPath="fonts/Comfortaa-Regular.ttf" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:text="@string/txtColon"
                    android:textSize="@dimen/bureau_regular_text_size" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_No"
                        android:text="@string/txtNo"
                        android:textSize="@dimen/bureau_regular_text_size"
                        android:gravity="end"
                        fontPath="fonts/Comfortaa-Regular.ttf" />

                    <ToggleButton
                        android:id="@+id/toggle_Smoking"
                        style="@style/ToggleButton"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginLeft="@dimen/dimens_eight_dp"
                        android:text=""
                        android:textOff=""
                        android:textOn="" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_Yes"
                        android:text="@string/txtYes"
                        android:textSize="@dimen/bureau_regular_text_size"
                        android:textColor="@color/light_grey"
                        fontPath="fonts/Comfortaa-Regular.ttf" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txtContinue"
        android:textAllCaps="false"
        android:id="@+id/btn_SaveHabits"
        android:layout_gravity="bottom"
        android:background="@drawable/btn_radio_on"
        android:textColor="@color/cardview_light_background"
        fontPath="fonts/Comfortaa-Regular.ttf"
        android:textSize="@dimen/bureau_title_text_size" />
</LinearLayout>
