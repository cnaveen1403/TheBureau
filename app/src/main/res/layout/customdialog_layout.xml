<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_custom_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Terms and Conditions"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="@dimen/bureau_title_text_size" />

    <ImageView
        android:id="@+id/dialog_close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimens_eight_dp"
        android:src="@drawable/ic_close_bw"
        android:layout_toLeftOf="@+id/empty_view"
        android:layout_marginRight="@dimen/dimens_eight_dp" />

    <View
        android:layout_width="@dimen/dimens_eight_dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:id="@+id/empty_view" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/dialog_close_button">

        <TextView
            android:id="@+id/dialog_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimens_eight_dp"
            android:textSize="@dimen/bureau_regular_text_size"
            android:lineSpacingMultiplier="1.5" />
    </ScrollView>
</RelativeLayout>