<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.bureau.bureauapp.profilesetup.AccountCreation"
    tools:ignore="MissingPrefix"
    tools:showIn="@layout/activity_account_creation">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                fontPath="fonts/Comfortaa-Regular.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:text="@string/tvProvideTxt"
                android:textAlignment="center"
                android:textSize="@dimen/bureau_subtitle_text_size" />

            <EditText
                android:id="@+id/etFirstName"
                fontPath="fonts/Comfortaa-Regular.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_user_black"
                android:drawableLeft="@drawable/ic_user_black"
                android:hint="@string/txtFirstName"
                android:inputType="textCapSentences"
                android:paddingBottom="4dp"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textSize="@dimen/bureau_regular_text_size" />

            <EditText
                android:id="@+id/etLastName"
                fontPath="fonts/Comfortaa-Regular.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:background="@drawable/border_bottom"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_user_black"
                android:drawableLeft="@drawable/ic_user_black"
                android:hint="@string/txtLastName"
                android:inputType="textCapSentences"
                android:paddingBottom="4dp"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textSize="@dimen/bureau_regular_text_size" />

            <EditText
                android:id="@+id/etDOB"
                fontPath="fonts/Comfortaa-Regular.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:background="@drawable/border_bottom"
                android:drawableEnd="@drawable/ic_calendar_black"
                android:drawableRight="@drawable/ic_calendar_black"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_cake_black"
                android:drawableLeft="@drawable/ic_cake_black"
                android:hint="@string/txtDOB"
                android:inputType="date"
                android:paddingBottom="4dp"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textSize="@dimen/bureau_regular_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvGender"
                    fontPath="fonts/Comfortaa-Regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txtGender"
                    android:textSize="@dimen/bureau_regular_text_size" />

                <ImageView
                    android:id="@+id/ivFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:src="@drawable/img_female_black" />

                <ToggleButton
                    android:id="@+id/toggleButton_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:background="@drawable/toggle_gender_selector"
                    android:checked="false"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />

                <ImageView
                    android:id="@+id/ivMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:src="@drawable/img_male_red" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@drawable/border_bottom"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etPhoneNo"
                    fontPath="fonts/Comfortaa-Regular.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_mob_black"
                    android:drawableLeft="@drawable/ic_mob_black"
                    android:hint="@string/txtMobileNumber"
                    android:inputType="phone"
                    android:paddingBottom="8dp"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textSize="@dimen/bureau_regular_text_size" />
            </LinearLayout>

            <EditText
                android:id="@+id/etEmail"
                fontPath="fonts/Comfortaa-Regular.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@drawable/border_bottom"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_email_black"
                android:drawableLeft="@drawable/ic_email_black"
                android:hint="@string/txtEmailId"
                android:inputType="textEmailAddress"
                android:paddingBottom="4dp"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textSize="@dimen/bureau_regular_text_size" />

            <TextView
                android:id="@+id/tvProfileFor"
                fontPath="fonts/Comfortaa-Regular.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:text="@string/tvProfileForTxt"
                android:textAlignment="center"
                android:textSize="@dimen/bureau_regular_text_size" />

            <Spinner
                android:id="@+id/spinner_profilefor"
                style="@style/spinner_style"
                android:layout_width="200dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:prompt="@string/txtSelectRelationship"
                android:spinnerMode="dialog"
                android:textSize="@dimen/bureau_regular_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_weight="0.50"
                    android:background="@drawable/border_bottom"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etProfileFirstName"
                        fontPath="fonts/Comfortaa-Regular.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/ic_user_black"
                        android:drawableLeft="@drawable/ic_user_black"
                        android:hint="@string/txtFirstName"
                        android:inputType="textCapSentences"
                        android:paddingBottom="4dp"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:textSize="@dimen/bureau_regular_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_weight="0.50"
                    android:background="@drawable/border_bottom"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etProfileLastName"
                        fontPath="fonts/Comfortaa-Regular.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/ic_user_black"
                        android:drawableLeft="@drawable/ic_user_black"
                        android:hint="@string/txtLastName"
                        android:inputType="textCapSentences"
                        android:paddingBottom="4dp"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:textSize="@dimen/bureau_regular_text_size" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/btn_radio_on"
        android:text="@string/txtContinue"
        android:textSize="@dimen/bureau_title_text_size"
        android:textAllCaps="false"
        fontPath="fonts/Comfortaa-Regular.ttf"
        android:textColor="@color/cardview_light_background" />
</LinearLayout>
