<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.bureau.bureauapp.profilesetup.ProfileHeritage"
    tools:showIn="@layout/activity_profile_heritage"
    tools:ignore="MissingPrefix">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Religion_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/bureau_regular_text_size"
                    fontPath="fonts/Comfortaa-Regular.ttf" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:text="@string/txtColon"
                    android:textSize="@dimen/bureau_regular_text_size"
                    android:layout_gravity="center" />

                <EditText
                    android:id="@+id/editText_Religion"
                    android:layout_width="0dp"
                    android:padding="8dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:hint="Select Religion"
                    android:background="@drawable/border_bottom"
                    android:drawableRight="@drawable/ic_dropdown_arrow"
                    android:inputType="none"
                    android:editable="false"
                    android:focusable="false"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="@dimen/bureau_regular_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/activity_vertical_margin">

                <TextView
                    android:id="@+id/MotherToungue_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:layout_gravity="center_vertical"
                    fontPath="fonts/Comfortaa-Regular.ttf"
                    android:textSize="@dimen/bureau_regular_text_size" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:text="@string/txtColon"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/bureau_regular_text_size" />

                <EditText
                    android:id="@+id/editText_MotherToungue"
                    android:layout_width="0dp"
                    android:padding="8dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:hint="Select Mother Tongue"
                    android:background="@drawable/border_bottom"
                    android:drawableRight="@drawable/ic_dropdown_arrow"
                    android:inputType="none"
                    android:editable="false"
                    android:focusable="false"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="@dimen/bureau_regular_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/activity_vertical_margin">

                <TextView
                    android:id="@+id/FamilyOrigin_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:layout_gravity="center_vertical"
                    fontPath="fonts/Comfortaa-Regular.ttf"
                    android:textSize="@dimen/bureau_regular_text_size" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:text="@string/txtColon"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/bureau_regular_text_size" />

                <EditText
                    android:id="@+id/editText_FamilyOrigin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_weight="1.1"
                    android:hint="Select Family Origin"
                    android:background="@drawable/border_bottom"
                    android:drawableRight="@drawable/ic_dropdown_arrow"
                    android:inputType="none"
                    android:editable="false"
                    android:focusable="false"
                    android:singleLine="true"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/bureau_regular_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/activity_vertical_margin">

                <TextView
                    android:id="@+id/Specification_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text="@string/txtSpecification"
                    android:layout_gravity="center_vertical"
                    fontPath="fonts/Comfortaa-Regular.ttf"
                    android:textSize="@dimen/bureau_regular_text_size" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.10"
                    android:text="@string/txtColon"
                    android:textSize="@dimen/bureau_regular_text_size"
                    android:layout_gravity="center_vertical" />

                <EditText
                    android:id="@+id/editText_Specification"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_weight="1.1"
                    android:hint="Select Specification"
                    android:background="@drawable/border_bottom"
                    android:drawableRight="@drawable/ic_dropdown_arrow"
                    android:textSize="@dimen/bureau_regular_text_size"
                    android:inputType="none"
                    android:editable="false"
                    android:focusable="false"
                    android:singleLine="true"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/activity_vertical_margin">

                <TextView
                    android:id="@+id/Gothra_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text="@string/txtGothra"
                    android:textSize="@dimen/bureau_regular_text_size"
                    android:layout_gravity="center_vertical"
                    fontPath="fonts/Comfortaa-Regular.ttf" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:text="@string/txtColon"
                    android:textSize="@dimen/bureau_regular_text_size"
                    android:layout_gravity="center_vertical" />

                <EditText
                    android:id="@+id/editText_Gothra"
                    android:layout_width="0dp"
                    android:padding="8dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:textSize="@dimen/bureau_regular_text_size"
                    android:hint="Please enter gothra"
                    android:background="@drawable/border_bottom"
                    android:singleLine="true"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_SaveHeritage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txtContinue"
        android:textAllCaps="false"
        android:layout_gravity="bottom"
        android:background="@drawable/btn_radio_on"
        android:textColor="@color/cardview_light_background"
        android:textSize="@dimen/bureau_title_text_size"
        fontPath="fonts/Comfortaa-Regular.ttf" />
</LinearLayout>
